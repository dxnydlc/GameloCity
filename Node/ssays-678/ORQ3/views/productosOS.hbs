function populateProdOS( json )
{
	//
	var $data = [], $CSGO = 1;
	if( json.data != undefined ){
		$.each( json.data , function( key, rs ) {
			var $o = [];
			$o.push($CSGO);
			$o.push(rs.IdProducto);
            $o.push(rs.producto);
            $o.push(rs.UMedida);
            $o.push(rs.Cantidad);
            $o.push(rs.Glosa);
            $o.push(`<button data-id="${rs.IDProductoOS}" data-uuid="${rs.uu_id}" data-nombre="${rs.producto}" type="button" class=" getData btn btn-block btn-primary btn-xs">Editar</button>`);
            $o.push(`<button data-id="${rs.IDProductoOS}" data-uuid="${rs.uu_id}" data-nombre="${rs.producto}" type="button" class=" delData btn btn-block btn-danger btn-xs">Eliminar</button>`);
            //
			$data.push( $o );
			$CSGO++;
		});
	}
	//
	return $data;
}
